<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_white_selectable_item_background"
        android:padding="16dp"
        >

    <TextView
            android:id="@+id/textView_listrowStockHeader_quantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:text="@string/generic_title_quantity"
            android:textIsSelectable="false"
            android:textStyle="bold"
            />

    <TextView
            android:id="@+id/textView_listrowStockHeader_acquisitionValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="2"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:text="@string/generic_acquisition_value"
            android:textIsSelectable="false"
            android:textStyle="bold"
            />

    <TextView
            android:id="@+id/textView_listrowStockHeader_profit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="@string/generic_profit"
            android:textIsSelectable="false"
            android:textStyle="bold"
            />

    <LinearLayout
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/generic_title_total"
                android:textIsSelectable="false"
                android:textStyle="bold"
                />

        <TextView
                android:id="@+id/textView_listrowStockHeader_totalProfit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:textIsSelectable="false"
                android:textStyle="bold"
                tools:text="1000kr"
                />

    </LinearLayout>

</GridLayout>
