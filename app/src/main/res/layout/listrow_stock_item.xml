<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_white_selectable_item_background"
        android:clickable="true"
        android:columnCount="4"
        android:focusable="true"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:rowCount="2"
        >

    <TextView
            android:id="@+id/textView_listrowStockItem_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnSpan="3"
            android:layout_columnWeight="1"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:textIsSelectable="false"
            tools:text="lååååååååång text"
            />

    <ImageView
            android:id="@+id/imageView_listrowStockItem_overflowMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:src="@drawable/ic_overflow_menu"
            />

    <TextView
            android:id="@+id/textView_listrowStockItem_quantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:textIsSelectable="false"
            tools:text="10"
            />

    <TextView
            android:id="@+id/textView_listrowStockItem_acquisitionValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:textIsSelectable="false"
            tools:text="1500 SEK"
            />

    <LinearLayout
            android:layout_width="0dp"
            style="?android:buttonBarStyle"
            android:background="?android:attr/selectableItemBackground"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="end"
            android:orientation="horizontal"
            android:padding="12dp"
            >

        <Button
                android:id="@+id/button_listrowStockItem_buy"
                style="?android:buttonBarButtonStyle"
                android:layout_width="32dp"
                android:layout_height="24dp"
                android:layout_marginEnd="4dp"
                android:background="@android:color/holo_green_dark"
                android:clickable="true"
                android:contentDescription="@string/action_stock_buy"
                android:duplicateParentState="true"
                android:focusable="true"
                android:text="@string/action_stock_buy_short"
                android:textSize="12sp"
                />

        <Button
                android:id="@+id/button_listrowStockItem_sell"
                style="?android:buttonBarButtonStyle"
                android:layout_width="32dp"
                android:layout_height="24dp"
                android:layout_marginStart="4dp"
                android:background="@android:color/holo_red_dark"
                android:clickable="true"
                android:contentDescription="@string/action_stock_sell"
                android:focusable="true"
                android:text="@string/action_stock_sell_short"
                android:textSize="12sp"
                />

    </LinearLayout>

</GridLayout>
