<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/background_white_selectable_item_background"
        android:clickable="true"
        android:columnCount="4"
        android:focusable="true"
        >

    <TextView
            android:id="@+id/textView_listrowStockOrderHeader_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:maxLines="2"
            android:text="@string/generic_date"
            />

    <TextView
            android:id="@+id/textView_listrowStockOrderHeader_quantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:maxLines="2"
            android:text="@string/generic_quantity"
            />

    <TextView
            android:id="@+id/textView_listrowStockOrderHeader_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:maxLines="2"
            android:text="@string/generic_name"
            />

    <TextView
            android:id="@+id/textView_listrowStockOrderHeader_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:maxLines="2"
            android:text="@string/generic_price_per_stock"
            />

</GridLayout>
